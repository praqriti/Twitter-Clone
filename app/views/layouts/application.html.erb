<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "TwitterClone" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <%- if logged_in? %>
        <div id="header">
          <%= link_to "Home", root_path, :title => "Home" %>
          |
          <%= link_to "Edit profile", edit_user_path(current_user), :title => "Edit profile" %>
          |
          <%= link_to "Logout", logout_path, :title => "Logout" %>
        </div>
      <% end %>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
    <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js" %>
    <%= javascript_include_tag :defaults %>
  </body>
</html>
